@model Evidence.Models.Insurance

@{
    ViewData["Title"] = "Edit";
}

<h3 class="pt-3">Editovat</h3>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="InsuranceId" />
            <div class="form-group">
                <label asp-for="NameInsurance" class="control-label"></label>
                <input asp-for="NameInsurance" class="form-control" />
                <span asp-validation-for="NameInsurance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" id="Description" rows="6"></textarea>
            </div>
            <div class="form-group pt-3">
                <input type="submit" value="Uložit" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Zpět na seznam</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
